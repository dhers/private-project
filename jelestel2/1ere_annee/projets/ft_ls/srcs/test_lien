#include "ft_ls.h"
#include <stdlib.h>
#include <stdio.h>

int			main(int ac, char **av)
{
	t_ls	*test;
	ac--;
	av++;
	if (!(test = parse_ls(ac, av)) && (ac == 0))
		test = (t_ls *)malloc(sizeof(t_ls));
	else if (!test)
		return (0);
	//printf("%s\n%s\n", test->optf, test->optp);
	ft_ls(".", test);

	return (0);
}
